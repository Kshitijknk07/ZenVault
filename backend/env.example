# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=zenvault
DB_USER=zenvault_user
DB_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# JWT Configuration (REQUIRED - Generate strong secrets)
JWT_SECRET=your-64-character-strong-jwt-secret-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-64-character-strong-refresh-jwt-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Management Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100000000
STORAGE_LIMIT=10737418240

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@zenvault.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d 