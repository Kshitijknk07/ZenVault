{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest", "vite/client"],
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
